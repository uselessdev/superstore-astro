---
import { collections } from "../api/collections";
const { title } = Astro.props;
---

<html lang="pt-br">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main class="w-full min-h-screen">
      <header class="container px-8 mx-auto flex py-10 justify-between">
        <div class="min-w-fit">
          <h1 class="text-sm font-semibold font-mono">Book Store</h1>
          <small class="font-mono text-gray-500 text-xs"
            >Minha Loja de Livros</small
          >
        </div>

        <nav class="w-full pl-6 flex gap-3 items-center justify-end">
          {
            collections.data.map((collection: any) => (
              <a
                href={`/${collection.slug}`}
                class="text-gray-700 font-mono font-semibold hover:underline hover:text-gray-500"
              >
                {collection.name}
              </a>
            ))
          }

          <a
            href="/carrinho"
            class="hover:bg-gray-50 h-10 w-10 grid place-items-center rounded-full relative"
          >
            <span
              class="bg-red-400 text-xs font-semibold font-mono text-white rounded-full w-6 h-6 grid place-items-center absolute top-0 right-0 translate-x-1 -translate-y-1"
              >3</span
            >
            <img src="assets/icons/cart.svg" class="w-6 h-6" />
          </a>
        </nav>
      </header>

      <div class="px-8">
        <slot />
        <!-- your content is injected here -->
      </div>
    </main>
  </body>
</html>
